@model IEnumerable<TaskItem>

<h2>المهام</h2>

<form asp-action="AddTask" method="post">
    <input type="text" name="title" placeholder="أدخل عنوان المهمة" required />
    <button type="submit">إضافة</button>
</form>

<ul>
@foreach (var task in Model)
{
    <li>
        <strong>@task.Title</strong>

        <form asp-action="CompleteTask" method="post" style="display:inline">
            <input type="hidden" name="id" value="@task.Id" />
            <button type="submit">✔️ إكمال</button>
        </form>

        <form asp-action="DeleteTask" method="post" style="display:inline">
            <input type="hidden" name="id" value="@task.Id" />
            <button type="submit">🗑 حذف</button>
        </form>

        <form asp-action="EditTask" method="post" style="display:inline">
            <input type="hidden" name="id" value="@task.Id" />
            <input type="text" name="newTitle" placeholder="عنوان جديد" />
            <button type="submit">✏️ تعديل</button>
        </form>
    </li>
}
</ul>
